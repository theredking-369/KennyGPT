<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiGPT.ViewModels"
             x:Class="MauiGPT.Views.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#667eea">

    <Grid RowDefinitions="*,Auto,*">
        
        <!-- Top Section -->
        <VerticalStackLayout Grid.Row="0" 
                           VerticalOptions="End" 
                           Padding="40,0,40,40">
            <Label Text="ðŸ’¬" 
                   FontSize="72"
                   HorizontalOptions="Center"/>
            <Label Text="Welcome!" 
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10"/>
            <Label Text="Your AI assistant is starting..." 
                   FontSize="16"
                   TextColor="White"
                   Opacity="0.9"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!-- Loading Box -->
        <Border Grid.Row="1"
                BackgroundColor="White"
                Stroke="Transparent"
                StrokeThickness="0"
                Margin="20,0"
                Padding="30,40">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20"/>
            </Border.StrokeShape>
            
            <Border.Shadow>
                <Shadow Brush="Black"
                        Offset="0,10"
                        Radius="30"
                        Opacity="0.3"/>
            </Border.Shadow>

            <VerticalStackLayout Spacing="20">
                <!-- Loading Spinner -->
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                 IsVisible="{Binding IsLoading}"
                                 Color="#667eea"
                                 HeightRequest="60"
                                 WidthRequest="60"
                                 HorizontalOptions="Center" />

                <!-- Status Message -->
                <Label Text="{Binding StatusMessage}"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#333"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>

                <Label Text="â° You'll have 1 hour of free access" 
                       FontSize="14"
                       TextColor="#666"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </Border>

        <!-- Bottom Branding -->
        <VerticalStackLayout Grid.Row="2" 
                           VerticalOptions="End"
                           Padding="40">
            <Label Text="KennyGPT" 
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   Opacity="0.8"
                   HorizontalOptions="Center"/>
            <Label Text="Free 1-Hour Trial â€¢ No Login Required" 
                   FontSize="14"
                   TextColor="White"
                   Opacity="0.6"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
